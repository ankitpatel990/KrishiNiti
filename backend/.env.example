# Application Settings
APP_NAME=Farm Help API
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=development

# Database Configuration
# For SQLite (default)
DATABASE_URL=sqlite:///./farmhelp.db

# For PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/farmhelp

# CORS Configuration (comma-separated URLs)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# External API Configuration
OPEN_METEO_API_URL=https://api.open-meteo.com/v1/forecast
DATA_GOV_IN_API_URL=https://api.data.gov.in/resource

# Cache Settings (in hours)
WEATHER_CACHE_HOURS=6
APMC_CACHE_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
